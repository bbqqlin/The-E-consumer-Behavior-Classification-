#K-MEANS CLUSTERING #

#PACKAÉ¢ES


if(!require(devtools)) install.packages("devtools")
devtools::install_github("kassambara/factoextra")
pkgs <- c("cluster",  "NbClust")
install.packages(pkgs)
library(ggplot2)
library(factoextra)
library(cluster)
library(NbClust)

# Elbow plot for best number of clusters - below #

set.seed(123)
k.max <- 15
data <- london0806[-1:-2]
fviz_nbclust(data, kmeans, method = "wss")

#use the k#
km <- kmeans(data,6)
mapdata<-X0719[1]
mapdata$cluster<-km$cluster
write.csv("mapdata.csv",file= "mapdata.csv")
